
  <% offered_courses = offered_courses_to_select() %>

  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= form_for @changeset, @action, fn f -> %>
        <%= CoursePlanner.SharedView.card @title do %>
          <%= CoursePlanner.SharedView.card_content do %>
            <%= if @changeset.action do %>
              <div class="form-error">
                <p>Oops, something went wrong! Please check the errors below.</p>
              </div>
            <% end %>
            <%= CoursePlanner.SharedView.form_select f, :offered_course_id, offered_courses, selected: selected_offered_course(@changeset),
                                                                                             required: true
            %>
            <%= CoursePlanner.SharedView.form_date f, :date, required: true %>
            <%= CoursePlanner.SharedView.form_time f, :starting_at, required: true, value: %{hour: 8, minute: 0} %>
            <%= CoursePlanner.SharedView.form_time f, :finishes_at, required: true, value: %{hour: 8, minute: 0} %>
            <%= CoursePlanner.SharedView.form_text f, :classroom %>
          <% end %>
          <%= CoursePlanner.SharedView.card_actions do %>
            <div class="row row--vspace">
              <div class="col-xs-12 col-md-3 col-md-offset-9">
                <%= CoursePlanner.SharedView.form_submit f, "Send" %>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
