<h2>Your tasks</h2>

<%= link "Sort by Fresh", to: task_path(@conn, :index, sort: "fresh"), class: "btn btn-default btn-xs" %>
<%= link "Sort by Closest", to: task_path(@conn, :index, sort: "closest"), class: "btn btn-default btn-xs" %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Deadline</th>
      <th>Volunteers needed</th>
      <th>Assigned to</th>
    </tr>
  </thead>
  <tbody>
<%= for task <- @your_tasks do %>
    <tr>
      <td><%= task.name %></td>
      <td><%= task.start_time %></td>
      <td><%= task.finish_time %></td>
      <td><%= task.max_volunteer %></td>
      <td><%= task_user(@conn, task.volunteers) %></td>
      <td class="text-right">
        <%= link "Show", to: task_path(@conn, :show, task), class: "btn btn-default btn-xs" %>
        <%= link "Drop", to: task_drop_path(@conn, :drop, task), method: :post, class: "btn btn-default btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

